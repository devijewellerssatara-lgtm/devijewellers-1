# Copy this file to .env and fill in your values.
# Server configuration
PORT=3000

# PostgreSQL database connection string
# Examples:
#   - Local Postgres:
#     postgres://USER:PASS@127.0.0.1:5432/DATABASE
#   - Docker Postgres:
#     postgres://postgres:postgres@127.0.0.1:5432/appdb
DATABASE_URL=postgres://USER:PASS@127.0.0.1:5432/DATABASE

# Client configuration (used at build time)
# When developing locally, use your local server
VITE_API_BASE_URL=http://127.0.0.1:3000

# For production, set the public URL of your server
# VITE_API_BASE_URL=https://your-domain.tld